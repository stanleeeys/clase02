@model List<clase02.Models.ClsPersona>
@{
    ViewBag.Title = "Descripcion";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var variable = "william";
}

@using (Html.BeginForm("Descripcion", "Persona"))
            {
                <label>
                    Agrega tu nombre
                </label>
                <input type="text" name="variable" />

                <input type="submit"/>
            }

<h1>@ViewBag.variabledinamica</h1>
<div>
    <table class="table table-dark table-striped">

        <thead>
        <th>
            ID

        </th>
        <th>
            Nombre

        </th>



        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nombre</td>
                </tr>

            }


        </tbody>
    </table>
</div>



